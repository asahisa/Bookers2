<div class="container px-5 px-sm-0">
  <div class="row">
    
    <!-- 共通テンプレート UserInfo-->
    <%= render partial: "users/user_info.html.erb", locals: { book: @book, user: @user } %>
        
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
        </thead>
        
        <tbody>
          <% @books.each do |post_image| %>
            <tr>
              <td>
                <!-- プロフィール画像 -->
                <%= image_tag post_image.user.get_profile_image(50,50) %>
              </td>
                
              <td>
                <!-- タイトル showリンク -->
                <%= link_to post_image.title, book_path(post_image.id) %>
              </td>
                
              <td>
                <!-- 本文 -->
                <%= post_image.body %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
</div>
    
  </div>
</div>