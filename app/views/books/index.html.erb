
<div class="container px-5 px-sm-0">
  <!--共通テンプレート エラー-->
  <%= render partial: "books/error.html.erb", locals: { book: @book } %> 
  
  <div class="row">
    <!-- 共通テンプレート UserInfo-->
    <%= render partial: "users/user_info.html.erb", locals: { book: @book, user: current_user } %>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        
        <tbody>
          <% @books.each do |post_image| %>
            <tr>
              <td>
                <!-- プロフィール画像 -->
                <%= image_tag post_image.user.get_profile_image(40,40) %>
              </td>
                
              <td>
                <%= link_to post_image.title, book_path(post_image.id) %>
              </td>
                
              <td>
                <%= post_image.body %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
 
  </div>
</div>