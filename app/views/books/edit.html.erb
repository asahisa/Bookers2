<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
  		
  		<!--共通テンプレート エラー-->
  		<%= render partial: "books/error.html.erb", locals: { book: @book } %>
  
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, id: "book_title", class: "form-control book_title" %>
        </div>
        
        <div class="form-group">
          <%= f.label :Opinion %>
          <%= f.text_area :body, id: "book_body", class: "form-control book_body" %>
        </div>
        
        <div class="form-group">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
      <% end %>
      
      <%= link_to "Show", book_path(@book.id) %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>    
</div>