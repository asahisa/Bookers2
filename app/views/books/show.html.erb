<h1>books_swho</h1>

<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">
      
    <!--共通テンプレート UserInfo-->
    <%= render partial: "users/user_info.html.erb",
    locals: { book: @book, user:  @user } %>
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
  
      <table class="table table-hover table-inverse">
        
        <tbody>
          <% @books.each do |post_image| %>
            <tr>
              <td>
                
                <%= link_to books_path(@user) do %>
                  <!-- プロフィール画像 -->
                  <%= image_tag post_image.user.get_profile_image(100,100), class: "attachment user profile_image fallback" %>
                  <br />
                  <%= post_image.user.name %>
                <% end %>
                
              </td>
                
              <td>
                <%= link_to post_image.title, book_path(post_image.id) %>
              </td>
              
              <td>
                <%= post_image.body %>
              </td>
            </tr>
          <% end %>
        </tbody>
        
      </table>
    </div>
   
  </div>
</div>